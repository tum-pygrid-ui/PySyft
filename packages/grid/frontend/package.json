{
  "name": "pygrid-ui",
  "version": "0.6.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "prebuild": "sh ./scripts/deploy-node-type.sh",
    "build": "next build",
    "start": "next start -p $PORT",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "test:unit": "jest --watch",
    "coverage": "jest --coverage",
    "export": "next export",
    "build:tailwind": "postcss src/styles/globals.css -o src/styles/tailwind.output.css",
    "watch:tailwind": "postcss --verbose --watch src/styles/globals.css -o src/styles/tailwind.output.css",
    "cy:open": "cypress open",
    "cy:install": "cypress install",
    "cy:run": "cypress run",
    "format": "pretty-quick --staged"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run lint && yarn run format"
    }
  },
  "dependencies": {
    "lint-staged": "^12.0.2",
    "next": "^12.0.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "tailwind": "^4.0.0"
  },
  "devDependencies": {
    "cypress": "^9.0.0",
    "eslint": "^8.2.0",
    "husky": "^7.0.4",
    "prettier": "^2.4.1",
    "pretty-quick": "^3.1.0",
    "typescript": "^4.2.3"
  },
  "resolutions": {
    "set-value": "4.1.0"
  }
}
