    "lint-staged": "^12.0.2",
    "next": "^12.0.3",
    "prettier": "^2.4.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-query": "^3.24.3",
    "tailwindcss": "^2.2.19"
